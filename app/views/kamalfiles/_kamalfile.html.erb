<div class="<%= 'w-full' unless @kamalfile.notes.present? %> flex flex-col lg:flex-row">
  <div id="<%= dom_id kamalfile %>" class="w-full lg:w-2/3">    
    <pre data-controller="linker"><code class="rounded-lg language-ruby"><%= kamalfile.content %></code></pre>
  </div>
  <% if @kamalfile.notes.present? %>
    <div class="mt-3 text-xs italic text-black px-2 w-full lg:w-1/3 lg:mt-0">
      <h3 class="font-bold text-sm py-2">Explanation</h3>
      <%= simple_format(@kamalfile.notes) %>
    </div>
  <% end %>
</div>