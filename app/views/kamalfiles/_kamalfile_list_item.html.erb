<li class="flex flex-wrap items-center justify-between py-5 gap-x-6 gap-y-4 sm:flex-nowrap">
  <div>
    <p class="font-semibold leading-6 text-gray-900 text-md">
      <%= link_to kamalfile_path(kamalfile), class: 'hover:underline flex items-center' do %>
        <%= image_tag "https://icons.duckduckgo.com/ip3/#{URI.parse(kamalfile.app_link).host}.ico",
                      class: 'mr-2 w-6 h-6 rounded-md',
                      onerror: "this.onerror=null;this.src='https://icons.duckduckgo.com/ip3/localhost.ico';" %>
        <span><%= kamalfile.name %></span>
      <% end %>
    </p>
    <div class="flex items-center mt-1 text-xs leading-5 text-gray-500 gap-x-2">
      <p class="flex">
        Submitted by <span class="flex items-center ml-2 space-x-1"><%= image_tag kamalfile.user.image, class: 'w-4 h-4 rounded-full' %> <b>
        <% if kamalfile.user.x_username.present? %>
          <%= link_to "@#{kamalfile.user.x_username}", "https://x.com/#{kamalfile.user.x_username}", class: 'hover:underline' %>
        <% elsif kamalfile.user.github_username.present? %>
          <%= link_to "@#{kamalfile.user.github_username}", "https://github.com/#{kamalfile.user.github_username}", class: 'hover:underline' %>
        <% else %>
          <%= kamalfile.user.name %>
        <% end %>
        </b></span>
      </p>
      <svg viewBox="0 0 2 2" class="h-0.5 w-0.5 fill-current">
        <circle cx="1" cy="1" r="1" />
      </svg>
      <p>
        <%= time_ago_in_words(kamalfile.created_at) %> ago
      </p>
    </div>
  </div>
  <div class="text-right">
    <div>
      <b><%= kamalfile.server_count %></b> <%= 'server'.pluralize(kamalfile.server_count) %>
    </div>
    <div>
      <b><%= kamalfile.server_count %></b> <%= 'accessory'.pluralize(kamalfile.accessory_count) %>
    </div>
    <div>
      <b><%= kamalfile.favorites_count %></b> <%= 'favorite'.pluralize(kamalfile.favorites_count) %>
    </div>
  </div>
</li>
