<%
  title "Helpful Articles"
  header_title "Helpful Articles"
%>

<ul>
  <% @articles.each do |article| %>
    <li class="mb-4">
      <strong><%= link_to article['title'], article['url'], target: "_blank", rel: "noopener noreferrer" %></strong>
      <p class="mt-2 text-sm font-normal"><%= article['description'] %></p>
    </li>
  <% end %>
</ul>
